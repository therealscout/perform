    	<script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>url
    	<script>
            $('#filetree').jstree({
                "core" : {
                    "animation" : 0,
                    "check_callback" : true,
                    "themes" : {
                        "stripes" : true
                    },
                    "data" : {
                        "url" : function(node) {
                            console.log(node);
                            if (node == -1) {
                                return "/api/files";
                            }
                            return "/api/files?id=/" + node.id; 
                        },
                        "data" : function (node) {
                            console.log(node);
                            return node.id == "#" ? {} : { "id" : node.id }
                        }
                    }
                },
                "types" : {
                    "#" : {
                        "max_children" : 1,
                        "max_depth" : 4,
                        "valid_children" : ["dir", "file"]
                    },
                    "dir" : {
                        "icon" : "glyphicon glyphicon-folder-open",
                        "valid_children" : ["dir", "file"]
                    },
                    "file" : {
                        "icon" : "glyphicon glyphicon-file",
                        "valid_children" : []
                    }
                },
                "plugins" : [
                    "contextmenu", "dnd", "search",
                    "state", "types", "wholerow"
                ]
            });

        	$("#s").submit(function(e) {
        	    e.preventDefault();
        		$("#filetree").jstree(true).search($("#q").val());
        	});
    	</script>
