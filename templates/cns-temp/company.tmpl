                                                                            <option value="OTHER" {{ if eq .company.CarrierType "OTHER"}}selected{{ end }}>Other</option>
                                                                        </select>
                                                                    </div>
                                                                    <input id="carrierTypeOther" class="form-control {{ if not $isCarrierOther }}hide{{ end }}" type="text" name="carrierTypeOther" value="{{ .company.CarrierTypeOther }}" placeholder="Carrier Type">
