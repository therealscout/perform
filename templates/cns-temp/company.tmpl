                                                                    <input type="text" class="form-control" name="contactAddress.city" value="{{ .company.ContactAddress.City }}" placeholder="City"><br>
                                                                    <input type="text" class="form-control" name="contactAddress.county" value="{{ .company.ContactAddress.County }}" placeholder="County"><br>
