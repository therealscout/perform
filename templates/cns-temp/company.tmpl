                                        <div class="row">
                                            <form id="edit" action="/cns/company" method="post">
                                                <div class="col-lg-6">
                                                    <h1 class="clearfix">
                                                        {{ if .company.Id }}{{ .company.Name }}{{ else }}New{{ end }}
