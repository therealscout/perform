                                                                        <div class="col-lg-6">
                                                                            <input type="text" class="form-control" name="contactAddress.state" value="{{ .company.ContactAddress.State }}" placeholder="State">
                                                                        </div>
                                                                        <div class="col-lg-6">
                                                                            <input type="text" class="form-control" name="contactAddress.zip" value="{{ .company.ContactAddress.Zip }}" placeholder="Zip">
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td><b>Secondary Contact</b></td>
                                                                <td>
                                                                    <input type="text" class="form-control" name="secondName" value="{{ .company.SecondName }}" placeholder="Name"><br>
                                                                    <input type="text" class="form-control" name="secondTitle" value="{{ .company.SecondTitle }}" placeholder="Title"><br>
                                                                    <input type="text" class="form-control" name="secondPhone" value="{{ .company.SecondPhone }}" placeholder="Phone">
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td><b>Physical Address</b></td>
                                                                <td>
                                                                    <input type="text" class="form-control" name="physicalAddress.street" value="{{ .company.PhysicalAddress.Street }}" placeholder="Street"><br>
                                                                    <input type="text" class="form-control" name="physicalAddress.city" value="{{ .company.PhysicalAddress.City }}" placeholder="City"><br>
                                                                    <input type="text" class="form-control" name="physicalAddress.county" value="{{ .company.PhysicalAddress.County }}" placeholder="County"><br>
                                                                    <div class="row">
                                                                        <div class="col-lg-6">
                                                                            <input type="text" class="form-control" name="physicalAddress.state" value="{{ .company.PhysicalAddress.State }}" placeholder="State">
                                                                        </div>
                                                                        <div class="col-lg-6">
                                                                            <input type="text" class="form-control" name="physicalAddress.zip" value="{{ .company.PhysicalAddress.Zip }}" placeholder="Zip">
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td><b>Mailing Address</b></td>
                                                                <td>
                                                                    <div class="row">
                                                                        <div class="col-lg-6">
                                                                            Same as Physical
                                                                        </div>
                                                                        <div class="radio-inline">
                                                                            <label class="cr-styled" for="sameYes">
                                                                                <input type="radio" name="sameAddress" value="true" id="sameYes" {{ if .company.SameAddress}}checked{{ end }}>
                                                                                <i class="fa"></i>
                                                                                Yes
                                                                            </label>
                                                                        </div>
                                                                        <div class="radio-inline">
                                                                            <label class="cr-styled" for="sameNo">
                                                                                <input type="radio" name="sameAddress" value="false" id="sameNo" {{ if not .company.SameAddress}}checked{{ end }}>
                                                                                <i class="fa"></i>
                                                                                No
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                    <span id="mailingAddress" {{ if .company.SameAddress }}class="hide"{{ end }}>
                                                                        <br>
                                                                        <input type="text" class="form-control" name="mailingAddress.street" value="{{ .company.MailingAddress.Street }}" placeholder="Street"><br>
                                                                        <input type="text" class="form-control" name="mailingAddress.city" value="{{ .company.MailingAddress.City }}" placeholder="City"><br>
                                                                        <input type="text" class="form-control" name="mailingAddress.county" value="{{ .company.MailingAddress.County }}" placeholder="County"><br>
