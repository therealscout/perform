                                                                            <div class="col-lg-6">
                                                                                <input type="text" class="form-control" name="mailingAddress.state" value="{{ .company.MailingAddress.State }}" placeholder="State">
                                                                            </div>
                                                                            <div class="col-lg-6">
                                                                                <input type="text" class="form-control" name="mailingAddress.zip" value="{{ .company.MailingAddress.Zip }}" placeholder="Zip">
                                                                            </div>
                                                                        </div>
                                                                    </span>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td><b>Business Type</b></td>
                                                                <td>
                                                                    {{ $isBusinessOther := eq .company.BusinessType "OTHER" }}
                                                                    <div id="businessTypeDiv" class="{{ if $isBusinessOther }}form-group{{ end }}">
                                                                        <select id="businessType" class="form-control" name="businessType">
                                                                            <option value="Sole Proprietor" {{ if eq .company.BusinessType "Sole Proprietor" }}selected{{ end }}>Sole Proprietor</option>
