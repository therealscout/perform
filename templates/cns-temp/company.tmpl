                                                                            <option value="OTHER" {{ if eq .company.BusinessType "OTHER" }}selected{{ end }}>Other</option>
                                                                        </select>
                                                                    </div>
                                                                    <input id="businessTypeOther" class="form-control {{if not $isBusinessOther}}hide{{ end }}" type="text" name="businessTypeOther" value="{{ .company.BusinessTypeOther }}" placeholder="Business Type">
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    <b>MC #</b>
                                                                    <input type="text" class="form-control" name="mCNum" value="{{ .company.MCNum }}" placeholder="MC#">
                                                                </td>
                                                                <td>
                                                                    <b>PUC #</b>
                                                                    <input type="text" class="form-control" name="pUCNum" value="{{ .company.PUCNum }}" placeholder="PUC#">
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    <b>Phone</b>
                                                                    <input type="text" class="form-control" name="phone" value="{{ .company.Phone }}" placeholder="Phone">
                                                                </td>
                                                                <td>
                                                                    <b>Fax</b>
                                                                    <input type="text" class="form-control" name="fax" value="{{ .company.Fax }}" placeholder="Fax">
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    <b>Email</b>
