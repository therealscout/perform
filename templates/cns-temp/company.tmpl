<!DOCTYPE html>

<html lang="en">
    <head>

        {{ template "head.tmpl" . }}

        <link rel="stylesheet" href="/static/datatables/custom.css" charset="utf-8">

        <link href="/static/date-time-picker/css/bootstrap-datetimepicker.css" rel="stylesheet" />

        <title>Customer</title>
    </head>
    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}

            <div class="wraper container-fluid">
                <div class="row">
                    <div class="col-sm-12">

                        <p class="lead">
                            Customer: {{ if .company.Id}}{{ .company.Name }}{{ else }}NEW{{ end }}
                        </p>

                        <div class="panel panel-default p-0">
                            <div class="panel-body p-0">
                                <ul class="nav nav-tabs profile-tabs">
                                    <li class="active"><a>Customer Center</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/service">Service</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/vehicle">Vehicles</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/driver">Drivers</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/form">Forms</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/file">Files</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/notification">Notifications</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/feature">Features</a></li>
                                    <li><a href="/cns/company/{{ .company.Id }}/violation">Stats</a></li>
                                    {{ if eq .session.ROLE "ADMIN" "DEVELOPER" }}
                                        <li><a href="/admin/company/{{ .company.Id }}/task">Tasks</a></li>
                                    {{ end }}
                                </ul>
                                <div class="tabPane clearfix">
                                    <div id="view"  class="profile-desk">
                                        <div class="row">
                                            <div id="infoPane" class="col-lg-6">
                                                <h1 class="clearfix">
                                                    {{ if .company.Id }}{{ .company.Name }}{{ else }}New{{ end }}
                                                    {{ if eq .session.ROLE "ADMIN" "DEVELOPER" }}
                                                        <button data-message="Are you sure you would like to delete this customer? This will also delete all forms and files associated with this customer. As well as any drivers and vehicles added to this customer and the drivers' and vehicles' forms and files. This CANNOT be undone!" data-color="red" data-url="/cns/company/{{ .company.Id }}/del" class="confirm-action btn btn-danger btn-xs pull-right" data-type="warning">Delete</button>
                                                    {{ end }}
                                                    <button class="btn btn-success btn-xs pull-right confirm-action" style="margin-right:10px;" data-message="Are you sure you would like to reset the password for this customer?" data-color="orange" data-url="/cns/company/{{ .company.Id }}/passwordReset" data-type="warning">Reset Password</button>
                                                    <button class="btn btn-primary btn-xs pull-right" id="editButton" style="margin-right:10px;">Edit</button>
                                                </h1>
                                                <table class="table table-condensed" style="margin-bottom:0;">
                                                    <tbody>
                                                        <tr>
                                                            <td><b>DOT #</b></td>
                                                            <td>{{ .company.DOTNum }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Name</b></td>
                                                            <td>{{ .company.Name }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>DBA</b></td>
                                                            <td>{{ .company.DBA }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Primary Contact</b></td>
                                                            <td>
                                                                {{ .company.ContactName }}<br>
                                                                <!-- {{ .company.ContactTitle }}<br> -->
                                                                {{ .company.ContactPhone }}
                                                                <!-- {{ if .company.ContactAddress.Street }}
                                                                    <br><br>
                                                                    {{ .company.ContactAddress.AddrHTML }}
                                                                {{ end }} -->
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Secondary Contact</b></td>
                                                            <td>
                                                                {{ .company.SecondName }}<br>
                                                                <!-- {{ .company.SecondTitle }}<br> -->
                                                                {{ .company.SecondPhone }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Physical Address</b></td>
                                                            <td>{{ .company.PhysicalAddress.AddrHTML }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Mailing Address</b></td>
                                                            <td>{{ .company.MailingAddress.AddrHTML }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Business Type</b></td>
                                                            <td>{{ .company.GetBusinessType }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>MC #</b> &nbsp;&nbsp;{{ .company.MCNum }}
                                                            </td>
                                                            <td>
                                                                <b>PUC #</b> &nbsp;&nbsp;{{ .company.PUCNum }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>Phone</b> &nbsp;&nbsp;{{ .company.Phone }}
                                                            </td>
                                                            <td>
                                                                <b>Fax</b> &nbsp;&nbsp;{{ .company.Fax }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>Email</b> &nbsp;&nbsp;{{ .company.Email }}
                                                            </td>
                                                            <td>
                                                                <b>EIN #</b> &nbsp;&nbsp;{{ .company.EINNum }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>Entity #</b> &nbsp;&nbsp;{{ .company.EntityNum }}
                                                            </td>
                                                            <td>
                                                                <b>Carrier Type</b> &nbsp;&nbsp;{{ .company.CarrierType }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>GPS Provider</b></td>
                                                            <td>{{ .company.GPSProvider }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>GPS Username</b> &nbsp;&nbsp;{{ .company.GPSUsername }}
                                                            </td>
                                                            <td>
                                                                <b>GPS Password</b> &nbsp;&nbsp;{{ .company.GPSPassword }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td><b>Fuel Card Provider</b></td>
                                                            <td>{{ .company.FuelCardProvider }}</td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>Fuel Card Username</b> &nbsp;&nbsp;{{ .company.FuelCardUsername }}
                                                            </td>
                                                            <td>
                                                                <b>Fuel Card Password</b> &nbsp;&nbsp;{{ .company.FuelCardPassword }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <b>NY OSCAR Password</b> &nbsp;&nbsp;{{ .company.NYOscarPassword }}
                                                            </td>
                                                            <td>
                                                                <b>Oregon #</b> &nbsp;&nbsp;{{ .company.OregonNum }}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <tr>
                                                                <td><b>Password</b></td>
                                                                <td>{{ .company.Password }}</td>
                                                            </tr>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>

                                            <div class="col-lg-6 clearfix">
                                                <div class="profile-desk">
                                                    <div style="height:315px;">
                                                        <h1 class="clearfix">
                                                            Notes
                                                            <button class="btn btn-primary btn-xs pull-right" id="addNote">Add</button>
                                                        </h1>
                                                        <div style="height:285px; overflow:auto;">
                                                            <table class="table table-condensed table-hover table-bordered" style="margin-bottom:0;">
                                                                <tbody>
                                                                    {{ range $note := .notes }}
                                                                        <tr class="clickable" data-note='{{ toBase64Json $note }}'>
                                                                            <td>
                                                                                {{ $note.Body }}
                                                                            </td>
                                                                            <td>
                                                                                Recored Time:<br>
                                                                                {{ $note.StartTimePretty }}
                                                                            </td>
                                                                            <td>
                                                                                Saved Time:<br>
                                                                                {{ idTime $note.Id }}
                                                                            </td>
                                                                        </tr>
                                                                    {{ end }}
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <table class="table table-condensed" style="margin-bottom:0;">
                                                        <tbody>
                                                            <tr>
                                                                <td><b>Credit Card</b></td>
                                                                <td>
                                                                    {{ if.company.CreditCard.Number }}
